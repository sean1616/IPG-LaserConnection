        xmlns:presenter="clr-namespace:EthernetConnection.ViewModel"
        mc:Ignorable="d"
        Title="LaserControl" Height="600" Width="750" >

    <Window.Resources>
        <global:ET_GlobalChannel x:Key="et_global"/>
        <presenter:ET_Presenter x:Key="et_presenter"/>
